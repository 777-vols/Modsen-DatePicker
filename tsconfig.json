{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react",
    "target": "es5",
    "outDir": "dist",
    "module": "ESNext",
    "declarationDir": "types",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@testing-library/jest-dom", "jest-styled-components"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
